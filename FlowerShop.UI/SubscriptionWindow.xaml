<Window x:Class="FlowerShop.UI.SubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowerShop.UI"
        mc:Ignorable="d"
        Title="Оплата подписки" MinHeight="450" MinWidth="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007AFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="2"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">

                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  Margin="5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005FB8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Тарифный план" FontSize="16" Margin="0,0,0,10" Foreground="#333"/>
            <Border Background="White" CornerRadius="8" BorderBrush="#DDD" BorderThickness="1" Padding="5">
                <ComboBox x:Name="TariffComboBox" SelectedIndex="0" Height="35" BorderThickness="0" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Месячная — 299 руб." Tag="30"/>
                    <ComboBoxItem Content="Годовая — 2899 руб." Tag="365"/>
                </ComboBox>
            </Border>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1" Padding="20">
            <StackPanel>
                <TextBlock Text="Данные банковской карты" FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Номер карты" Margin="0,0,0,5" Foreground="#666" FontSize="11"/>
                <TextBox x:Name="CardNumberBox" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" 
                         Padding="5" FontSize="14" Tag="Номер карты"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Срок действия" Margin="0,0,0,5" Foreground="#666" FontSize="11"/>
                        <TextBox x:Name="ExpiryBox" Height="35" VerticalContentAlignment="Center" 
                                 Padding="5" MaxLength="5" Tag="ММ/ГГ"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="CVC" Margin="0,0,0,5" Foreground="#666" FontSize="11"/>
                        <PasswordBox x:Name="CvcBox" Height="35" VerticalContentAlignment="Center" 
                                     Padding="5" MaxLength="3"/>
                    </StackPanel>
                </Grid>
             
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,20,0,0">
            <Button Content="Оплатить" x:Name="PayButton" Click="Pay_Click"
                    Width="170" Height="40" Margin="0,0,10,0">
            </Button>

            <Button Content="Отмена" Click="Cancel_Click"
                    Width="170" Height="40" Margin="10,0,0,0">
            </Button>
        </StackPanel>
    </Grid>
</Window>